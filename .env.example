# Database Configuration
# For Docker: PG_HOST=db (container name)
# For local: PG_HOST=localhost
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=delivery_db


# JWT Configuration
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Node Environment
NODE_ENV=development

# Email Configuration (Zoho Mail)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@yourdomain.com
EMAIL_FROM_NAME=Courier Delivery Service

# SMS Configuration (SMS.net.bd)
SMS_API_KEY=your-sms-api-key-here
SMS_API_URL=https://api.sms.net.bd/sendsms
SMS_SENDER_ID=
SMS_CONTENT_ID=
